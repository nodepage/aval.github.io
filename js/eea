task1.addEventListener("click", function () {
          conv = parseInt(ta.treasures, 10);
          newTresure = conv + 1000;

          const Data = {
            treasures: newTresure,
            referralId: referralId,
            task1: "True",
            task2: ta.task2,
            task3: ta.task3,
            task4: ta.task4,
            task5: ta.task5,
            task6: ta.task6,
          };

          updateData(Data);
          console.log(Data);

          task1.style.opacity = "0.5";

          task1.style.pointerEvents = "none";
        });

